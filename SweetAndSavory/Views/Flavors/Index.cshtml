@{
  Layout = "_Layout";
}

@using SweetAndSavory.Models;

<h1>Flavors</h1>

@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
  <p>@Html.ActionLink("Add one now?", "Create")</p>
}
else
{
  <ul>
  @foreach (Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.Type}", "Details", new { id = flavor.FlavorId})</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new flavor", "Create")</p>