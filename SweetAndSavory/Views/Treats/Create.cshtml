@{
  Layout = "_Layout";
}

@model SweetAndSavory.Models.Treat

<h4>Add a new treat</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name, new {@class="form-label"})
  @Html.TextBoxFor(model => model.Name, new {@class = "form-control", type="text", id="name"})

  @Html.LabelFor(model => model.Description, new {@class="form-label"})
  @Html.TextBoxFor(model => model.Description, new {@class = "form-control", type="text", id="description"})

  @Html.LabelFor(model => model.Price, new {@class="form-label"})
  @Html.TextBoxFor(model => model.Price, new {@class = "form-control", type="number", id="price"})

  <input type="submit" value="Add Treat" class="btn btn-outline-success" />
}
<p>@Html.ActionLink("Back to All Treats", "Index")</p>