@{
  Layout = "_Layout";
}

@using SweetAndSavory.Models;
@model List<SweetAndSavory.Models.Treat>;

<h1>Treats</h1>

@if (@Model.Count == 0)
{
  <h3>No treats have been added yet!</h3>
}

@foreach (Treat treat in Model)
{
  <li>@Html.ActionLink($"{treat.SomeProperty}", "Details", new { id = treat.TreatId}) |
  @treat.Flavor.SomeProperty
</li>
}

<p>@Html.ActionLink("Add new treat", "Create")</p>